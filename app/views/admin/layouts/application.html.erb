<!DOCTYPE html>
<html>
  <head>
    <title>Monosumida</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:900|Permanent+MarkerRoboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons&display=swap" rel="stylesheet">

    <script src="https://kit.fontawesome.com/757212c879.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="admin-body">
    <% if notice %><%= render 'parts/notice', notice: notice %><% end %>
    <% if alert %><%= render 'parts/alert', alert: alert %><% end %>
    <div class="wrapper ">
      <%= render 'admin/parts/nav' %>
      <div class="main-panel">
        <div class="content">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
