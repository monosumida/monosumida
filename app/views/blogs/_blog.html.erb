<%= link_to blog_path(blog) do %>
  <div class="blog-card-wrapper">
    <div class="blog-card">
      <div class="blog-info-wrapper">
        <h1><%= blog.title %></h1>
        <p class="blog-publish-at"><i class="far fa-clock"></i><%= blog.created_at.strftime('%y/%m/%d %H:%M') %></p>
        <div class="blog-author clearfix">
          <div class="blog-author-icon">
            <%= image_tag blog.user.image.thumb.to_s, class: 'blog-author-icon-image' %>
          </div>
          <p class="blog-author-name"><%= blog.user.name %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
