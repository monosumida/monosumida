<%= Rouge::Themes::Gruvbox.mode(:dark).render(:scope => '.highlight') %>
.blog-conetent-wrapper,
#blog_preview {
  font-size: 24px;
  line-height: 1.5;
  h1 {
    font-size: 2.2rem;
    border-bottom: 1px solid #EEEEEE;
  }
  h2 {
    font-size: 1.8rem;
    border-bottom: 1px solid #EEEEEE;
  }
  h3 {
    font-size: 1.6rem;
  }
  h4 {
    font-size: 1.3rem;
  }
  h5 {
    font-size: 1.2rem;
  }
  h6 {
    color: #777777;
    font-size: 1.1rem;
  }
  p {
    font-size: 1rem;
    line-height: 2;
    img {
      @media(min-width: 980px) {
        max-width: 870px;
        display: block;
        margin: 0 auto;
      }
      @media(max-width: 979px) {
        width: 100%;
      }
    }
  }
  ul > li {
    font-size: 1rem;
  }
  p code,
  h1 code,
  h2 code,
  h3 code,
  h4 code,
  h5 code,
  h6 code,
  ul > li code {
    font-size: .9rem;
    font-family: 'hack';
    padding: .1rem .4rem;
    color: #4A4A4A;
    background-color: #EEEEEE;
    border-radius: 3px;
  }
  blockquote {
    border-left: 5px solid #ddd;
    color: #777;
    padding: 1em;
    padding-right: 0;
    margin: 1.5em 0;
    font-size: 17.5px;
    p {
      line-height: 1.9;
      &:last-child {
        margin-bottom: 0;
      }
    }
  }
  table {
    display: block;
    overflow: auto;
    margin: 1.5em 0;
    border-left: 1px solid #ddd;
    border-collapse: collapse;
    thead {
      display: table-header-group;
      vertical-align: middle;
      border-color: inherit;
      tr:nth-child(odd) {
        background-color: #eee;
      }
      tr {
        th {
          font-weight: 700;
          background-color: #fff;
          border-top: 1px solid #ddd;
          border-bottom: 1px solid #ccc;
          border-right: 1px solid #ccc;
          padding: 8px 10px;
        }
      }
    }
    tbody {
      display: table-row-group;
      vertical-align: middle;
      border-color: inherit;
      tr:nth-child(odd) {
        background-color: #eee;
      }
      td {
        border-bottom: 1px solid #ccc;
        border-right: 1px solid #ccc;
        padding: 8px 10px;
      }
    }
  }
  .highlight {
    margin-top: 10px;
    margin-bottom: 40px;
    pre {
      overflow: auto;
      word-wrap: normal;
      white-space: pre;
      font-size: 0.9rem;
      line-height: 1.5;
      border-radius: 2px;
      padding: 0;
      margin: 0;
      &.codehilite {
        font-family: 'hack';
        padding: 30px 40px;
        color: #e3e3e3;
        background-color: #364549;
      }
      code {
        font-size: 1rem;
        color: #fbf1c7;
        table.rouge-table {
          margin: 0;
          // code
          td.rouge-code {
            padding: 0;
            vertical-align: top;
            pre {
              padding: 5px 10px;
              line-height: 1.6rem;
            }
          }
          // line number
          td.rouge-gutter {
            text-align: center;
            background-color: #ddd;
            padding: 5px;
            width: 20px;
            vertical-align: top;
            pre {
              line-height: 1.6rem;
            }
          }
        }
      }
    }
  }

  .highlight-info {
    margin-top: 10px;
    margin-bottom: 2px;
    .highlight-info__inner {
      display: inline-block;
      border-left: 1px solid #ddd;
      padding: 1px 7px 2px;
      font-size: 0.8rem;
      letter-spacing: 0.5px;
    }
  }

  .highlight-info + .highlight {
    margin-top: 0;
  }

  // Override rouge theme
  .highlight {
    .c1 {
      color: #939393;
    }
    .s1 {
      color: #bf4c00;
    }
  }
}
